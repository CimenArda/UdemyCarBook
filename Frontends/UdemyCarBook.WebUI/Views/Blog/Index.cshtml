@using UdemyCarBook.Dto.BlogDtos
@model List<ResultAllBlogsWithAuthorsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
@foreach (var item in Model)
{
    

<section class="ftco-section">
      <div class="container">
        <div class="row d-flex justify-content-center">
          <div class="col-md-12 text-center d-flex ftco-animate">
          	<div class="blog-entry justify-content-end mb-md-5">
              <a href="blog-single.html" class="block-20 img" style="background-image: url('@item.CoverImageUrl');">
              </a>
              <div class="text px-md-5 pt-4">
              	<div class="meta mb-3">
                  <div><a href="#">@item.CreatedDate.ToString("d/mm/yyyy")</a></div>
                  <div><a href="#">@item.AuthorName</a></div>
                  <div><a href="#" class="meta-chat"><span class="icon-chat"></span> Kategori:@item.CategoryName</a></div>
                </div>
                <h3 class="heading mt-2"><a href="#">@item.Title</a></h3>
                <p>@item.Description.Substring(0,250)...</p>
                <p><a href="blog-single.html" class="btn btn-primary">Okumaya Devam Et <span class="icon-long-arrow-right"></span></a></p>
              </div>
            </div>
          </div>
     
        </div>
        
      </div>
    </section>
}
