@using UdemyCarBook.Dto.CommentDtos
@model List<ResultCommentDto>
<ul class="comment-list">
    @foreach (var item in Model)
    {
        
 
    <li class="comment">
        <div class="vcard bio">
                <img src="~/carbook-master/images/user.jpg" alt="Image placeholder">
        </div>
        <div class="comment-body">
            <h3>@item.NameSurname</h3>
            <div class="meta">@item.CreatedDate.ToString("d/mm/yyyy")</div>
            <p>@item.Description</p>
            <p><a href="#" class="reply">Reply</a></p>
        </div>
    </li>
    }

</ul>
